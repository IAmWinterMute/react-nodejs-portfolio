{
    "compilerOptions": {
        "noEmitOnError":false,
        "noImplicitAny": false,
        "removeComments": true,
        "jsx": "react",
        "target": "es6",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "./build/",
    },
    "include": [
        "source/sharedLayer/**/*",
        "./source/client/**/*",
        "./source/server/**/*", "source/sharedLayer",
    ],
    "exclude": ["node_modules", "build", "**/*.js", "**/*.jsx"]
}
